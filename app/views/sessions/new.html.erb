<%= stylesheet_link_tag "general" %>
<%= render TaskComponent.new(nav: isLoggedIn) %>

 <%= csrf_meta_tags %>
 <div class='center-content'>
 
<%= form_with(scope: :session, url: login_path) do |f| %>
 
<div class="form-group">
  <%= f.label :email %><br/>
  <%= f.email_field :email, class: "form-control" %>
</div>
 
<div class="form-group">
  <%= f.label :password %><br/>
  <%= f.password_field :password, class: "form-control" %>
</div>
 
<div class="form-group">
  <%= f.submit "Log in", class: "btn btn-primary", class: 'btn' %>
</div>
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
 <% end %>
<%= form_tag ({controller: 'sessions', action: 'delete', method: 'post'}) do %>
<% end %>
<%= button_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>


<%= button_to "Home", home_index_path, method: :get, class: 'btn' %>
</div>